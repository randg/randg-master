.container .fourteen.columns                { width: 1030px; }
.container .fifteen.columns                 { width: 1105px; }
.container .sixteen.columns                 { width: 100%; margin:0; }

.container .one-third.column                { width: 380px; }
.container .two-thirds.column               { width: 780px; }

