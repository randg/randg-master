.container                                  { width: 100%; }

.container .column,
.container .columns                         { margin-left: 0; margin-right: 0; float: left; display: inline; }
.column.alpha, .columns.alpha               { margin-left: 0; margin-right: 2.5%; }
.column.omega, .columns.omega               { margin-right: 0; margin-left: 2.5%; }
.alpha.omega                                { margin-left: 0; margin-right: 0; }

.container .one.column,
.container .one.columns                     { width: 28px; }
.container .two.columns                     { width: 76px; }

.container .three.columns                   { width: 22%; margin:0 2.5% 0 1.5%; }
.container .three.columns.alpha             { margin:0 2.5% 0 0; }
.container .three.columns.omega             { margin:0 0 0 1.5%; }
.container .four.columns                    { width: 22%; margin:0 1.5%; }
.container .four.columns.product-options    { width: 20%; margin:0; }

.container .five.columns                    { width: 220px; }
.container .six.columns                     { width: 38%; margin:0 2% 0 0; }
.container .seven.columns                   { width: 316px; }
.container .eight.columns                   { width: 364px; }
.container .nine.columns                    { width: 412px; }
.container .ten.columns                     { width: 460px; }
.container .eleven.columns                  { width: 508px; }
.container .twelve.columns                  { width: 75%; }
.container .thirteen.columns                { width: 604px; }
.container .fourteen.columns                { width: 652px; }
.container .fifteen.columns                 { width: 700px; }
.container .sixteen.columns                 { width: 100%; }

.container .one-third.column                { width: 236px; }
.container .two-thirds.column               { width: 492px; }

