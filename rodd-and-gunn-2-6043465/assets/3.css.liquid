.container .offset-by-four                  { padding-left: 192px; }
.container .offset-by-five                  { padding-left: 240px; }
.container .offset-by-six                   { padding-left: 288px; }
.container .offset-by-seven                 { padding-left: 336px; }
.container .offset-by-eight                 { padding-left: 384px; }
.container .offset-by-nine                  { padding-left: 432px; }
.container .offset-by-ten                   { padding-left: 480px; }
.container .offset-by-eleven                { padding-left: 528px; }
.container .offset-by-twelve                { padding-left: 576px; }
.container .offset-by-thirteen              { padding-left: 624px; }
.container .offset-by-fourteen              { padding-left: 672px; }
.container .offset-by-fifteen               { padding-left: 720px; }

.container .sidebar.four.columns { margin:0 3% 0 0; }










/* Header */

.header-wrap, .header-bar, .header { min-height:5px; }
.logo { width:175px; }  
.mini-logo { position:absolute; bottom:-7px; left:30px; width:55px; z-index:1001; }
.mini-logo img { width:100%; }

div.container.banners.scroll-layout { padding:35px 0 0; }

/* Main Navigation */

.utility-navigation-wrap { display:block; position:absolute; top:-60px; right:20px; z-index:1002; } 

/* Home page banners */

.home-banner { width:49.9%; }
.home-banner.newsletter-sign-up { display:block; }

.container .home-banner-wrap .two.columns.returns { width:41%; line-height:20px; margin:6px 0 0; }
.container .home-banner-wrap .two.columns.delivery { width:45%; line-height:20px; margin:6px 0 0; }
.container .home-banner-wrap .returns { width:34%; }
.container .home-banner-wrap input[type="email"] { padding:5px 8px 5px 12px; }

.home-banner p { margin:0; width:26%; float:left; line-height:17px; padding:0 5px 0 0; font-family:{{ settings.regular_google_webfont_font }} }
.home-banner .contact-form { overflow:hidden; width:72%; }
.home-banner #contact_email { width:67%; float:left; margin:0; font-size:11px; }
.home-banner #sign_up { width:30%; float:right; margin:0; padding:5px 14px; }

.home-banner .delivery,
.home-banner .returns { padding:0 0 0 40px; line-height:17px; font-size:14px; }
.home-banner .delivery span,
.home-banner .returns span { font-size:11px; }

.home-banner .delivery { background-size:26px; background-position:5px 0; }

.home-banner .returns { background-size:30px; background-position:5px -6px; }

#collectionPage .thumbnail { padding:0 0 20px; margin:0 2.5% 0 1.5%; width:22%; }
#collectionPage .thumbnail.alpha { margin:0 2.5% 0 0; }
#collectionPage .thumbnail.omega { margin:0 0 0 1.5%; }

/* Forms */

.container .six.columns.form-wrapper { width:50%; margin:0 auto; float:none; display:block; padding:0 10px; }

.desktop-hidden { display:none; }

h1.product_name { text-align:left; }

.refinebar .refine-list { display:block; }

#inlineChart { padding:20px; }
#inlineChart table tbody tr td,
#inlineChart table thead tr td { padding:0 10px; font-size:13px; padding:0 10px !important; }







