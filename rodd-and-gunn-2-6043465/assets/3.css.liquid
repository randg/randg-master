.container                                  { width: 100%; }

.container .column,
.container .columns                         { margin-left: 0; margin-right: 0; float: left; display: inline; }
.column.alpha, .columns.alpha               { margin-left: 0; margin-right: 2.5%; }
.column.omega, .columns.omega               { margin-right: 0; margin-left: 2.5%; }
.alpha.omega                                { margin-left: 0; margin-right: 0; }

.container .one.column,
.container .one.columns                     { width: 28px; }
.container .two.columns                     { width: 76px; }

.container .three.columns                   { width: 22%; margin:0 2.5% 0 1.5%; }
.container .three.columns.alpha             { margin:0 2.5% 0 0; }
.container .three.columns.omega             { margin:0 0 0 1.5%; }
.container .four.columns                    { width: 22%; margin:0 1.5%; }
.container .four.columns.product-options    { width: 20%; margin:0; }

.container .five.columns                    { width: 32%; float:right; }
.container .six.columns                     { width: 38%; margin:0 2% 0 0; }
.container .seven.columns                   { width: 316px; }
.container .eight.columns                   { width: 364px; }
.container .nine.columns                    { width: 412px; }
.container .ten.columns                     { width: 65%; }
.container .eleven.columns                  { width: 508px; }
.container .twelve.columns                  { width: 75%; }
.container .thirteen.columns                { width: 604px; }
.container .fourteen.columns                { width: 652px; }
.container .fifteen.columns                 { width: 700px; }
.container .sixteen.columns                 { width: 100%; }

.container .one-third.column                { width: 236px; }
.container .two-thirds.column               { width: 492px; }

/* Offsets */
.container .offset-by-one                   { padding-left: 48px; }
.container .offset-by-two                   { padding-left: 96px; }
.container .offset-by-three                 { padding-left: 144px; }
.container .offset-by-four                  { padding-left: 192px; }
.container .offset-by-five                  { padding-left: 240px; }
.container .offset-by-six                   { padding-left: 288px; }
.container .offset-by-seven                 { padding-left: 336px; }
.container .offset-by-eight                 { padding-left: 384px; }
.container .offset-by-nine                  { padding-left: 432px; }
.container .offset-by-ten                   { padding-left: 480px; }
.container .offset-by-eleven                { padding-left: 528px; }
.container .offset-by-twelve                { padding-left: 576px; }
.container .offset-by-thirteen              { padding-left: 624px; }
.container .offset-by-fourteen              { padding-left: 672px; }
.container .offset-by-fifteen               { padding-left: 720px; }

.container .sidebar.four.columns { margin:0 3% 0 0; }


.flexslider { margin:0 auto 10px; }
.home-tiles .eight.columns.home-tile { width:32.33%; float:left; margin:0; }
.home-tiles .eight.columns.pos-left { margin:0 0.5% 0 0; }
.home-tiles .eight.columns.pos-center { margin:0 1%; }
.home-tiles .eight.columns.pos-right { margin:0 0 0 0.5%; }


.header_bar .container ul.menu { line-height:20px; margin:0 0 0 20px; float:left; width:auto; }
.header_bar .container .utility-navigation-wrap ul.menu { width:auto; margin:0; }
.nav ul.menu li { padding: 0px 3px; }
.header_bar ul.menu li a { font-size:10px; }
.header_bar .utility-navigation-wrap.nav ul.menu li a { font-size:16px; }
.header_bar .utility-navigation-wrap.nav ul.menu li a.icon-user,
.header_bar .utility-navigation-wrap.nav ul.menu li a.icon-search { display:none; }


/* Header */

.header-wrap, .header-bar, .header { min-height:5px; }
.logo { width:175px; }  
.mini-logo { position:absolute; bottom:5px; left:30px; width:55px; z-index:1001; display:none; }
.mini-logo img { width:100%; }

div.container.banners { border-width:0 0 1px; }
div.container.banners.scroll-layout { padding:35px 0 0; }

/* Main Navigation */

.utility-navigation-wrap { display:block; position:absolute; top:7px; right:20px; z-index:1002; } 

/* Home page banners */

.home-banner { width:49.9%; }
.home-banner.newsletter-sign-up { display:block; }

.container .home-banner-wrap { padding:10px 10px 6px; }
.container .home-banner-wrap .two.columns.returns,
.container .home-banner-wrap .two.columns.delivery { width:31%; line-height:13px; font-size:12px; margin:1px 0 0 15px; }
.container .home-banner-wrap .two.columns.returns { margin:1px 0 0 35px; }
.container .home-banner-wrap .returns { width:34%; }
.container .home-banner-wrap input[type="email"] { padding:4px 8px 2px 7px; margin:2px 0 0 }

.home-banner p { margin:1px 0 0 7%; width:17%; float:left; line-height:11px; font-size:10px; text-transform:uppercase; padding:0 5px 0 0; font-family:'Conv_GuardianSans-Light'; }
.home-banner .contact-form { overflow:hidden; width:72%; float:left; margin:1px 0 0; }
.home-banner #contact_email { width:67%; float:left; margin:0; font-size:11px; }
.home-banner #sign_up { width:28%; float:left; margin:0 0 0 7px; padding:5px 0 3px; font-size:11px; }

.home-banner .delivery,
.home-banner .returns { padding:0 0 0 40px; line-height:17px; font-size:14px; }
.home-banner .delivery span,
.home-banner .returns span { font-size:11px; }

.home-banner .delivery { background-size:27px 20px; background-position:3px 2px; }
.home-banner .returns.two.columns { background-size:23px 20px; background-position:7px 2px; }

#collectionPage .thumbnail { padding:0 0 20px; margin:0 2.5% 0 1.5%; width:22%; }
.ie7 #collectionPage .thumbnail { margin:0 2.5% 0 1.4%; }
#collectionPage .thumbnail.alpha { margin:0 2.5% 0 0; }
#collectionPage .thumbnail.omega { margin:0 0 0 1.5%; }

/* Forms */

.container .six.columns.form-wrapper { width:50%; margin:0 auto; float:none; display:block; padding:0 10px; }

.desktop-hidden { display:none; }
.refinebar a.desktop-hidden { display:none; }

h1.product_name { text-align:left; }

.refinebar .refine-list { display:block; }

#inlineChart { padding:20px; }
#inlineChart table tbody tr td,
#inlineChart table thead tr td { padding:0 10px; font-size:13px; padding:0 10px !important; }


.product-listing { padding:0; }

/* Cart Page */

.cart h1.collection_title { text-align:left; padding:0 0 10px; }
.cart .continue_shopping { text-align:left; }
.cart .cart_items h4 { text-align:left; }
.cart .cart-subtotal { padding:0; }

.cart form { position:relative; }
.cart form .action_button.mobile_hidden { width:240px; position:absolute; right:0; }
.cart input.action_checkout { width:240px; float:right; margin:0; }

.cart ul.cart-header li { float:left; }

.cart ul li h4 { padding:2px 0 0; }
.cart ul li.desc { width:60%; }
.cart ul li.quan { width:20%; }
.cart ul li.subt { width:20%; }

.cart ul.cart-body { padding:0 0 20px; border:solid #f3f0e5; border-width:0 0 1px; }
.cart ul.cart-body li { float:none; } 
.cart ul.cart-body li ul li { float:left; }
.cart ul.cart-body li ul li p { overflow:hidden; }

.cart ul.cart-body li ul li > a { float:left; width:auto; } 

.cart ul li.desc a { float:left; }
.cart ul.cart-body li ul li .item-details { float:left; position:relative; margin:0 0 0 10px; }
.cart .quantity_label { font-size:14px; }

.cart .cart-subtotal .continue_shopping { float:left; padding:20px 0 0; position:relative; width:auto; }
.cart .cart-subtotal .cart-sub { width:50%; float:right; padding:20px 0 0; }
.cart .cart-subtotal .cart-sub strong,
.cart .cart-subtotal .cart-sub p { text-align:right; width:100%; display:block; margin:0 0 5px; }
 

.cart .collection_nav input { float:right; width:50%; margin:-49px 0 0; }
.cart .cart-subtotal { width:100%; }

.cart .cart_items .alpha { float:left; margin:0; }
.cart .cart_items .columns.omega { width:55%; float:left; }

.cart .quote { margin:120px 0 100px; font-size:16px; }

.container div.collection_nav { margin:0; }

.container .five.columns.alpha { width:160px; }

.cart .cart-subtotal .cart-sub input.add_to_cart { width:100%; }


div.select { margin:1px 0 0; }

div.content { padding:10px 0 0; }

.mm-list > li.cart_item > a { padding:15px 10px 15px 30px; }
.mm-menu.mm-right > ul { padding:20px 0 40px 65px; }
.item-details { width:385px; font-size:14px; white-space:normal; }
.item-details strong { font-size:14px; }

#cart .action_button { margin:15px 0 0 15px; padding:12px 0; font-size:16px; }
#cart a.action_button.edit_cart { margin:15px 0 0 38px; padding:12px 0; font-size:16px; }


.footer table { position:absolute; top:60px; right:0; width:108px; margin:0; }







