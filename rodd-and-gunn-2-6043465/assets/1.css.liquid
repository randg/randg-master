.container { width: 100%; }
.container .columns,
.container .column { margin: 0; }

.container .one.column,
.container .one.columns,
.container .two.columns,
.container .three.columns,
.container .four.columns,
.container .five.columns,
.container .six.columns,
.container .seven.columns,
.container .eight.columns,
.container .nine.columns,
.container .ten.columns,
.container .eleven.columns,
.container .twelve.columns,
.container .thirteen.columns,
.container .fourteen.columns,
.container .fifteen.columns,
.container .sixteen.columns,
.container .one-third.column,
.container .two-thirds.column  { width: 100%; }

/* Offsets */
.container .offset-by-one,
.container .offset-by-two,
.container .offset-by-three,
.container .offset-by-four,
.container .offset-by-five,
.container .offset-by-six,
.container .offset-by-seven,
.container .offset-by-eight,
.container .offset-by-nine,
.container .offset-by-ten,
.container .offset-by-eleven,
.container .offset-by-twelve,
.container .offset-by-thirteen,
.container .offset-by-fourteen,
.container .offset-by-fifteen { padding-left: 0; }


#debugger { position:absolute; top:0; left:0; font-family:Arial, Sans-serif; z-index:1001; }


.logo { padding:0; margin:0 auto 3px; width:200px; }
.mini-logo { display:none; }   

/* Layout */

div.container.banners { padding:0; margin:0 auto 10px; border:solid #f3f0e5; border-width:0 0 1px; }
.gutter { display:block; padding:0 20px; }

/* Main Navigation */

.main-navigation-wrap { text-align:center; width:100%; background-color:#f3f0e5; padding:5px 0; }
.main-navigation-wrap .container { padding:0; }
.utility-navigation-wrap { display:none; } 
.currency-dropdown { position:absolute; top:0; left:0; }
 
/* Footer Navigation */

.footer_menu { list-style:none; padding:0; margin:0; overflow:hidden; text-align:center; } 
.footer_menu li { display:inline-block; margin:0 10px 5px; }

.credits { margin:15px 0 0; text-align:center; } 

/* Home page banners */

.home-banner { width:100%; font-size:12px; font-weight:bold; margin:0; color:#404040; }
.home-banner.newsletter-sign-up { display:none; }
.home-banner-wrap { padding:10px; overflow:hidden; }

.container .home-banner-wrap .two.columns { width:37%; float:left; }

.home-banner .delivery,
.home-banner .returns { padding:0 0 0 30px; line-height:13px; font-size:12px; } 
.home-banner .delivery span,
.home-banner .returns span { font-size:9px; } 

.home-banner .delivery { background-image:url("{{ 'ico-delivery.png' | asset_url }}"); background-size:24px; background-repeat:no-repeat; background-position:0 5px; }

.home-banner .returns { background-image:url("{{ 'ico-returns.png' | asset_url }}"); background-size:28px; background-repeat:no-repeat; background-position:0 -1px; }

/* Home page tiles */

div.home-tiles { margin:0; }
.home-tiles .eight.columns.home-tile { width:50%; float:left; margin:0; }
.home-tile img { width:100%; vertical-align:top; }

/* Color swatches */

ul.color-swatch { list-style:none; padding:0; margin:0; overflow:hidden; }
ul.color-swatch li { float:left; width:10px; height:10px; margin:2px; }
ul.color-swatch li a { text-indent:-9999em; padding:0; }

ul.color-swatch li.blood { background-color:{{ settings.blood }}; }
ul.color-swatch li.port { background-color:{{ settings.port }}; }
ul.color-swatch li.breeze { background-color:{{ settings.breeze }}; }
ul.color-swatch li.orange { background-color:{{ settings.orange }}; }
ul.color-swatch li.deep-teal { background-color:{{ settings.deep-teal }}; }
ul.color-swatch li.coal { background-color:{{ settings.coal }}; }

/* Collection page image carousel */

.relative { overflow:hidden; text-align:center; } 
.relative img { display:none; margin:0; vertical-align:top; }
.relative img.first { display:inline; }

.footer .container { border:solid #f3f0e5; border-width:1px 0 0; }

#collectionPage .thumbnail { width:50%; float:left; }
 
#categorydescription p { padding:10px 0; }

/* Refine Bar */

.container .refinebar.four.columns { margin:0 3% 0 0; position:relative; } 

.refinebar h5 { margin:0; padding:0; font-size:14px; }
.refinebar .refine-list { margin:0 0 20px; display:none; }
.refinebar .refine-list-wrapper { padding:10px; border:solid #f3f0e5; border-width:1px; }

.refinebar ul { padding:0; margin:0; list-style:none; max-height:245px; overflow:scroll; }
.refinebar ul li { overflow:hidden; margin:0; padding:2px 0; }
.refinebar ul li a { float:left; }
.refinebar ul li input[type="checkbox"] { float:right; }

.refinebar .filter-helper { position:absolute; left:40%; background-color:#404040; padding:5px; -moz-border-radius: 3px; -webkit-border-radius: 3px; border-radius: 3px; }
.refinebar .filter-helper a { color:#fff; }

/* Breadcrumb */

.breadcrumb { color:#404040; } 

/* Forms */

.form-wrapper { width:100%; }
.form-wrapper form { padding:0 0 200px; }
.form-wrapper h4 { border-width:0; font-size:13px; margin:0; }

/* Account Summary */

#accountSummary h1 { border-width:0; margin:0 0 5px; }
#accountSummary h1 span { display:block; font-size:13px; text-transform:capitalize; }
#accountSummary h2 { text-align:center; text-decoration:underline; font-size:16px; margin:30px 0 15px; }

#accountSummary .page-header { text-align:center; border:solid #f3f0e5; border-width:0 0 1px; }

#accountSummary .sixteen.acc-address-book { display:none; }

#customer_orders {} 
#customer_orders table thead tr th { text-decoration:underline; } 
#customer_orders table tbody tr td { text-align:center; } 

.account-navigation { margin:0 0 10px; }
.account-navigation ul { list-style:none; margin:0; padding:0; overflow:hidden; display:inline-block; }
.account-navigation ul li { float:left; padding:0 10px; margin:0; }
.account-navigation a.button { font-size:13px; background-color:#404040; font-family:Arial, Sans-serif; }

h1 a.logout { color:#404040; }

#cart ul li.loader { min-height:136px; background-color:#fff; background-image:url("{{ 'ajax-loader.gif' | asset_url }}"); background-position:200px center; background-repeat:no-repeat; }
#cart ul li.loader a { display:none; }

.cart-hidden { display:none!important; }

/* Product Page */

.flexslider .loader { width:100%; height:100%; position:absolute; z-index:100; background-color:#fff; background-image:url("{{ 'ajax-loader.gif' | asset_url }}"); background-position:center center; background-repeat:no-repeat; }

.mm-menu a.close span { width:40px; height:41px; background-color:#404040; position:absolute; left:15px; text-indent:0; color:#fff; top:10px; text-align:center; font-size:30px; line-height:40px; }

.size-chart { margin:0 0 10px; }
.size-chart a { font-size:12px; text-decoration:underline; }

.single-option-selector { margin:0 0 10px; }

h1.product_name { text-align:center; }
