body { background-color:#fff; text-shadow:0; }
.step2 #products { margin:37px 0 0; }

#products h2 { display:none; }
table.form { padding:0; }
label { padding:0; font-size:12px; color:#404040; }

.vertical #container, .vertical #container.slim { width:100%!important; }
.vertical table tr td { max-width:100%!important; }

#credit_card_verification_value { margin:5px 0 0; }

.step1 table#thumbs { width:100%; font-size:13px; margin:50px 0 0; }
.step1 table#thumbs { display:none; }
table#thumbs td { background:none; background-color:transparent; padding:5px 0; }
#thumbs div.image { border-width:0; padding:0; }
#thumbs div.details { width:auto; }
#thumbs span.plist-line-price { display:block; }
#thumbs span { color:#404040; padding:0 0 3px; font-size:12px; } 
#thumbs h3 { color:#404040; }

#email input { font-size:13px; }


#container.slim #main {  }
#container.slim #header { border-bottom:solid 24px #f3f0e5; margin:0; background:none; }
#container.slim table#thumbs { margin:0; }
#container.slim table#thumbs div { border-width:0; }
#container.slim table#thumbs td { border-bottom:solid 1px #f3f0e5!important; padding:0; }
#container.slim table#thumbs td img { padding:10px 0; border-width:0; }
#container.slim table#thumbs td h3 { margin:10px 0 0 10px; }
#container.slim #content { margin:10px 0 0; }
#container.slim #content p { margin:0; }
#container.slim #content p a { margin:0 0 10px; }
#container.slim #create-account-btn { margin:0 0 10px 10px; }

#marketing-box label, #billing-is-shipping label { font-size:13px; }

#container.slim #footer { margin:10px 0 0; }

.slim #overview { background-color:transparent; }
#overview h2 { background:none; border-width:0; }

#container.slim #content h2 { background:none!important; border-width:0; padding:10px 0; }

#container.slim #overview h2 { padding:10px 0 0; margin:-32px 0 0; text-align:center; font-weight:normal!important; font-size:13px!important; }

#steps { background-color:#f3efdf; top:70px; font-style:normal; left:10px; right:10px; width:auto; margin:0; opacity:1; color:#404040; text-align:center; font-size:12px; font-weight:500; text-transform:capitalize; padding:5px 0; }
#wallet { padding:0; background:none!important; }
#content { padding:0 10px; margin:15px 0 0; }
#content p { font-size:13px; line-height:1.8em; }

table#billing td { float:right; font-size:13px; width:100%!important; }
table#billing td.lbl { width:auto !important; float:left; }
table#billing td.lbl label { margin:7px 0 5px; }
table#billing td input { width:100% !important; border:1px solid #ccc; padding:5px 0; text-indent:10px; margin:0; }
table#billing td select { width:100% !important; } 
table#billing .multiple_address_selection td { width:auto !important; margin:0 0 10px; max-width:100% !important; float:none; }
table#billing .multiple_address_selection td select { width:100% !important; padding:0 5%; display:block; }
table#billing #billing-is-shipping td input { float:left; }
table#billing #billing-is-shipping td label { float:left; margin:0 0 0 10px; width:80%; font-size:13px!important; }

#billing-is-shipping td label { font-size:13px!important; }

.inline label { margin:7px 0 5px; }

table#shipping { margin:0; }
table#shipping td { float:right; font-size:13px; width:100%!important; }
table#shipping td.lbl { width:auto !important; float:left; }
table#shipping td.lbl label { margin:7px 0 5px; }
table#shipping td input { width:100% !important; border:1px solid #ccc; padding:5px 0; text-indent:10px; margin:0; }
table#shipping td select { margin:0 0 10px; width:100% !important; } 
table#shipping .multiple_address_selection td { width:auto !important; margin:0 0 10px; max-width:100% !important; float:none; }
table#shipping .multiple_address_selection td select { width:100% !important; padding:0 5%; display:block; }

#footer { padding:20px 10px; border:solid #f3efdf; border-width:1px 0 0; background-color:transparent !important; }
#footer p { text-align:center; color:#404040; font-family:Arial, Sans-serif; font-size:11px; }

#buttons { background:transparent; margin:0; }
#create-account-btn,
#buttons input,
input.submit-btn { 
    background: #ff7f00;
    color: #fff; 
    border: 0;
    padding: 7px 20px;
    text-align: center;
    cursor: pointer;
    {% if settings.nav_typeface_method == "google_webfonts" %}
      font-family: "{{ settings.nav_google_webfont_font | replace: '+', ' ' }}";
    {% else %}
      font-family: {{ settings.nav_websafe_font | replace: '+', ' '  }};
    {% endif %}  
    font-weight: {{ settings.button_weight }};      
    font-size: {{ settings.button_font_size }}px;
    text-transform: {{ settings.button_font_style }};
    display: inline-block;
    -webkit-transition: all 200ms ease 0s;
    -moz-transition: all 200ms ease 0s;
    -ms-transition: all 200ms ease 0s;
    -o-transition: all 200ms ease 0s;
    transition: all 200ms ease 0s;
    -webkit-appearance: none;
    -webkit-font-smoothing: antialiased;
    font-smoothing: antialiased;
    -webkit-box-sizing: border-box;
    -moz-box-sizing: border-box;
    box-sizing: border-box;
    -moz-border-radius: 3px;
     -webkit-border-radius: 3px;
     border-radius: 3px; 
 } 


#email label, #addresses h3, .group h3 { font-size:18px !important; height:auto!important; border:solid #f3efdf; border-width:0 0 1px; background:transparent; {% if settings.headline_typeface_method == "google_webfonts" %}
      font-family: "{{ settings.headline_google_webfont_font | replace: '+', ' ' }}";
    {% else %}
      font-family: {{ settings.headline_websafe_font | replace: '+', ' ' }};
    {% endif %}  
    font-weight: {{ settings.headline_weight }};    
    text-transform: {{ settings.headline_font_style}};
    color: #404040;
    display:block;
    letter-spacing: {{ settings.headline_letter_spacing }}px;
    text-rendering: optimizeLegibility;
    padding:0;
}

#buttons small { margin:0 auto; }
